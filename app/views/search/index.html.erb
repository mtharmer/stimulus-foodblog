<div class="container-fluid">
  <%= form_tag(search_search_path, method: :post) do %>
    <%= text_field_tag 'criteria', @criteria, class: 'form-control' %>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <% end %>
  <div class="row p-2">
    <% @results && @results["recipes"]["recipe"].each do |result| %>
      <div class="col-6 p-2 border" style="height: 200px;">
        <div class="row">
          <div class="col-2">
            <% if result["recipe_image"] %>
              <%= image_tag result["recipe_image"], class: 'img-thumbnail' %>
            <% end %>
          </div>
          <div class="col-10">
            <h5 class="row"><%= result["recipe_name"] %></h5>
            <p class="row"><%= result["recipe_description"] %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
