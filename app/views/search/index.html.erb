<div class="container-fluid">
  <%= form_tag(search_search_path, method: :post) do %>
    <%= text_field_tag 'criteria', @criteria, class: 'form-control' %>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <% end %>
  <div class="row">
    <% @results && @results["recipes"]["recipe"].each do |result| %>
      <div class="col-2">
        <div class="card" style="width: 18rem;">
          <% if result["recipe_image"] %>
            <%= image_tag result["recipe_image"], class: 'card-img-top' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= result["recipe_name"] %></h5>
            <p class="card-text"><%= result["recipe_description"] %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
